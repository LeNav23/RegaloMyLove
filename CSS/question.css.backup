        radial-gradient(circle at 15% 3.5%, rgba(255, 255, 255, 0.7) 0%, transparent 0.25%),
        radial-gradient(circle at 22% 2.8%, rgba(255, 255, 255, 0.85) 0%, transparent 0.25%),
        radial-gradient(circle at 30% 3.8%, rgba(255, 255, 255, 0.8) 0%, transparent 0.25%),
        radial-gradient(circle at 37% 2.5%, rgba(255, 255, 255, 0.9) 0%, transparent 0.25%),
        radial-gradient(circle at 44% 3.2%, rgba(255, 255, 255, 0.75) 0%, transparent 0.25%),
        radial-gradient(circle at 52% 2.7%, rgba(255, 255, 255, 0.85) 0%, transparent 0.25%),
        radial-gradient(circle at 59% 3.6%, rgba(255, 255, 255, 0.8) 0%, transparent 0.25%),
        radial-gradient(circle at 66% 2.3%, rgba(255, 255, 255, 0.9) 0%, transparent 0.25%),
        radial-gradient(circle at 73% 3.4%, rgba(255, 255, 255, 0.75) 0%, transparent 0.25%),
        radial-gradient(circle at 80% 2.6%, rgba(255, 255, 255, 0.85) 0%, transparent 0.25%),
        radial-gradient(circle at 87% 3.7%, rgba(255, 255, 255, 0.8) 0%, transparent 0.25%),
        radial-gradient(circle at 94% 2.4%, rgba(255, 255, 255, 0.9) 0%, transparent 0.25%),
        radial-gradient(circle at 98% 3.3%, rgba(255, 255, 255, 0.75) 0%, transparent 0.25%),
        /* Reflejos de humedad en la arena */
        radial-gradient(ellipse 40% 3% at 20% 5%, rgba(255, 255, 255, 0.08) 0%, transparent 100%),
        radial-gradient(ellipse 35% 2.5% at 60% 6%, rgba(255, 255, 255, 0.06) 0%, transparent 100%),
        radial-gradient(ellipse 30% 2% at 85% 5.5%, rgba(255, 255, 255, 0.07) 0%, transparent 100%),
        /* Gradiente base - arena más oscura arriba por humedad con transición extendida */
        linear-gradient(180deg, 
            rgba(200, 176, 136, 0.95) 0%,
            rgba(212, 186, 148, 0.98) 5%,
            #c8b088 8%,
            #d4ba94 12%,
            #e0c9a0 20%,
            #e8d5b7 32%,
            #f0d9b5 47%,
            #ffe4c4 67%,
            #f4e4c1 83%,
            #f5deb3 100%
        );
    z-index: 0;
    filter: contrast(1.05) brightness(0.98);
    box-shadow: inset 0 2px 8px rgba(0, 0, 0, 0.08);
}



/* Seagulls */
.seagull {
    position: absolute;
    bottom: 173px;
    left: 50%;
    transform: translateX(-50%);
    width: 48px;
    height: 28px;
    background: linear-gradient(180deg, rgba(255, 255, 150, 0.9) 0%, rgba(255, 255, 200, 0.8) 100%);
    border: 2px solid #8B0000;
    border-radius: 3px 3px 0 0;
    box-shadow: 
        0 3px 10px rgba(0, 0, 0, 0.4),
        inset 0 0 20px rgba(255, 255, 100, 0.8);
    animation: lanternGlow 3s ease-in-out infinite;
}

@keyframes lanternGlow {
    0%, 100% {
        box-shadow: 
            0 3px 10px rgba(0, 0, 0, 0.4),
            inset 0 0 20px rgba(255, 255, 100, 0.8);
    }
    50% {
        box-shadow: 
            0 3px 15px rgba(255, 255, 100, 0.6),
            inset 0 0 30px rgba(255, 255, 50, 1);
    }
}

/* Support poles for roof */
.lighthouse-pole {
    position: absolute;
    bottom: 201px;
    width: 3px;
    height: 12px;
    background: linear-gradient(180deg, #4A4A4A 0%, #2A2A2A 100%);
    box-shadow: 1px 0 2px rgba(0, 0, 0, 0.4);
}

.lighthouse-pole:nth-child(1) {
    left: 35%;
}

.lighthouse-pole:nth-child(2) {
    right: 35%;
}

/* Roof (triangle/cone) */
.lighthouse-roof {
    position: absolute;
    bottom: 213px;
    left: 50%;
    transform: translateX(-50%);
    width: 0;
    height: 0;
    border-left: 26px solid transparent;
    border-right: 26px solid transparent;
    border-bottom: 32px solid #8B0000;
    filter: drop-shadow(0 3px 6px rgba(0, 0, 0, 0.4));
}

/* Roof highlight */
.lighthouse-roof::after {
    content: '';
    position: absolute;
    top: 8px;
    left: -20px;
    width: 0;
    height: 0;
    border-left: 20px solid transparent;
    border-right: 20px solid transparent;
    border-bottom: 24px solid #A52A2A;
}

/* Light beam - between roof and light room */
.lighthouse-light {
    position: absolute;
    bottom: 185px;
    left: 50%;
    transform: translateX(-50%);
    width: 100px;
    height: 100px;
    background: radial-gradient(circle, rgba(255, 255, 150, 0.7) 0%, rgba(255, 255, 100, 0.4) 30%, transparent 60%);
    border-radius: 50%;
    animation: lighthouseBeam 4s ease-in-out infinite;
}

@keyframes lighthouseBeam {
    0%, 100% {
        opacity: 0.3;
        transform: translateX(-50%) scale(1);
    }
    50% {
        opacity: 1;
        transform: translateX(-50%) scale(1.2);
    }
}

/* Sun reflections on water */
.sun-reflection {
    position: absolute;
    bottom: 40%;
    left: 50%;
    transform: translateX(-50%);
    width: 150px;
    height: 200px;
    background: linear-gradient(180deg, 
        transparent 0%,
        rgba(255, 215, 0, 0.2) 20%,
        rgba(255, 215, 0, 0.3) 50%,
        rgba(255, 215, 0, 0.2) 80%,
        transparent 100%
    );
    animation: shimmer 3s ease-in-out infinite;
    z-index: 1;
}

@keyframes shimmer {
    0%, 100% {
        opacity: 0.5;
    }
    50% {
        opacity: 0.8;
    }
}

#question-container {
    text-align: center;
    position: relative;
    width: 100%;
    max-width: 800px;
    padding: 2rem;
    z-index: 5;
}

#main-question {
    font-size: 3rem;
    font-weight: 700;
    color: white;
    text-shadow: 0 4px 20px rgba(0, 0, 0, 0.3);
    margin-bottom: 3rem;
    animation: fadeInScale 1s ease-out;
}

@keyframes fadeInScale {
    0% {
        opacity: 0;
        transform: scale(0.8);
    }
    100% {
        opacity: 1;
        transform: scale(1);
    }
}

#buttons-container {
    display: flex;
    justify-content: center;
    gap: 2rem;
    position: relative;
}

.btn {
    padding: 1rem 3rem;
    font-size: 1.5rem;
    font-weight: 600;
    border: none;
    border-radius: 50px;
    cursor: pointer;
    transition: all 0.3s ease;
    box-shadow: 0 8px 25px rgba(0, 0, 0, 0.3);
    font-family: 'Poppins', sans-serif;
}

.btn:hover {
    transform: translateY(-5px);
    box-shadow: 0 12px 35px rgba(0, 0, 0, 0.4);
}

.btn-no {
    background: #ff4757;
    color: white;
    position: relative;
}

.btn-yes {
    background: #2ecc71;
    color: white;
    position: relative;
}

#image-container {
    position: fixed;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    pointer-events: none;
    z-index: 1000;
    opacity: 0;
    transition: opacity 0.3s ease;
}

#image-container.show {
    opacity: 1;
}

#image-container img {
    max-width: 400px;
    max-height: 400px;
    display: block;
}
