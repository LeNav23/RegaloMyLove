* {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
}

body {
    font-family: 'Poppins', sans-serif;
    background: linear-gradient(180deg, 
        #87CEEB 0%,
        #FFB6C1 40%,
        #FFA07A 60%,
        #F4A460 80%,
        #DEB887 100%
    );
    min-height: 100vh;
    display: flex;
    justify-content: center;
    align-items: center;
    overflow: hidden;
    position: relative;
}

